---
interface Props {
    name: string;
    class?: string;
    // Permitimos string o number
    width?: string | number;
    height?: string | number;
}

// 1. Asignamos "100%" por defecto para que funcione bien con clases Tailwind
const { name, class: className, width = "100%", height = "100%" } = Astro.props;

// Función para decidir el viewBox automáticamente
const getViewBox = (iconName: string) => {
    if (iconName === "logo") return "0 0 179 41";
    if (iconName.startsWith("logo-")) return "0 0 60 60";
    return "0 0 22 22";
};

const viewBox = getViewBox(name);
---

<svg
    viewBox={viewBox}
    class={`fill-current ${className}`}
    width={width}
    height={height}
    aria-hidden="true"
>
    <use href={`/Icons.svg#${name}`}></use>
</svg>
